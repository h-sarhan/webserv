Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: [
        # Additional checks
        # modernize-*,
        # bugprone-*,
        # clang-analyzer-*,
        # cppcoreguidelines-*,
       ]
    Remove: [modernize-use-nullptr, modernize-use-auto, modernize-loop-convert, 
            modernize-use-using, modernize-use-nodiscard,modernize-use-trailing-return-type]
    CheckOptions:
      readability-identifier-naming.VariableCase: CamelCase
Hover:
  ShowAKA: Yes
Index:
  Background: Build
  StandardLibrary: Yes